{
  "name": "vibe-code-app",
  "version": "1.0.0",
  "description": "Full-stack automation testing demo with Playwright gate",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start:docker": "docker compose up -d --build backend frontend",
    "stop:docker": "docker compose down",
    "logs:docker": "docker compose logs -f",
    "test:e2e": "cd playwright && npx playwright test",
    "test:e2e:docker": "docker compose run --rm playwright",
    "test:e2e:ui": "cd playwright && npx playwright test --ui",
    "test:e2e:headed": "cd playwright && npx playwright test --headed",
    "report:open": "cd playwright && npx playwright show-report",
    "clean": "rm -rf node_modules frontend/node_modules playwright/node_modules backend/__pycache__ backend/app/__pycache__",
    "clean:docker": "docker compose down -v && docker system prune -f"
  },
  "keywords": [
    "automation",
    "testing",
    "playwright",
    "ci-cd",
    "fastapi",
    "react"
  ],
  "author": "Aliaksandr Khvastovich",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}